# Enterprise Environment Configuration
# This file contains all environment variables needed for the enterprise deployment

# ================================
# GENERAL CONFIGURATION
# ================================
NODE_ENV=production
LOG_LEVEL=info
API_VERSION=v1

# ================================
# SERVICE PORTS
# ================================
ASSET_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
AUDIT_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004
INTEGRATION_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006

# ================================
# DATABASE CONFIGURATION
# ================================
# MongoDB
MONGO_URI=mongodb://admin:securePassword123@mongodb:27017/asset-tracker?authSource=admin&replicaSet=rs0
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=securePassword123
MONGO_DATABASE=asset-tracker

# ================================
# CACHE & SESSION CONFIGURATION
# ================================
# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redisSecurePassword123
REDIS_DB=0
REDIS_URL=redis://:redisSecurePassword123@redis:6379/0

# Session Configuration
SESSION_SECRET=ultra-secure-session-secret-key-2024
SESSION_MAX_AGE=86400000

# ================================
# SEARCH & ANALYTICS
# ================================
# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elasticPassword123

# ================================
# MESSAGE BROKER
# ================================
# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=asset-tracker
KAFKA_GROUP_ID=asset-tracker-group

# Redis Streams (fallback)
REDIS_STREAMS_GROUP=asset-tracker-events

# ================================
# SECURITY CONFIGURATION
# ================================
# JWT Configuration
JWT_SECRET=ultra-secure-jwt-secret-key-2024-enterprise-grade
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=32-character-encryption-key-2024
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Keys
API_KEY_HEADER=X-API-Key
API_KEY_SECRET=enterprise-api-key-secret-2024

# ================================
# EXTERNAL SERVICES
# ================================
# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@asset-tracker.com
SENDGRID_FROM_NAME=Asset Tracker Enterprise

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=asset-tracker-files-prod
S3_BUCKET_REGION=us-east-1

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Prometheus
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=grafanaSecurePassword123

# Jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6832

# Application Performance Monitoring
APM_SERVER_URL=http://apm-server:8200
APM_SECRET_TOKEN=apm-secret-token

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Auth-specific rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# ================================
# CORS CONFIGURATION
# ================================
ALLOWED_ORIGINS=https://app.asset-tracker.com,https://admin.asset-tracker.com,https://api.asset-tracker.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# ================================
# BACKUP & RETENTION
# ================================
BACKUP_RETENTION_DAYS=2555
AUDIT_RETENTION_YEARS=7
LOG_RETENTION_DAYS=90

# ================================
# COMPLIANCE CONFIGURATION
# ================================
# GDPR
GDPR_ENABLED=true
GDPR_DATA_RETENTION_YEARS=7
GDPR_DELETION_GRACE_PERIOD_DAYS=30

# HIPAA
HIPAA_ENABLED=true
HIPAA_AUDIT_LOG_RETENTION_YEARS=6

# SOX
SOX_ENABLED=true
SOX_FINANCIAL_RECORDS_RETENTION_YEARS=7

# ================================
# MULTI-TENANCY
# ================================
DEFAULT_TENANT_LIMITS_USERS=100
DEFAULT_TENANT_LIMITS_ASSETS=10000
DEFAULT_TENANT_LIMITS_STORAGE=10737418240
DEFAULT_TENANT_LIMITS_API_REQUESTS=10000

# ================================
# NOTIFICATION CONFIGURATION
# ================================
# Email Templates
EMAIL_TEMPLATE_WELCOME=welcome
EMAIL_TEMPLATE_PASSWORD_RESET=password-reset
EMAIL_TEMPLATE_VERIFICATION=email-verification
EMAIL_TEMPLATE_ASSET_ALERT=asset-alert

# Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
FIREBASE_SERVER_KEY=your-firebase-server-key

# ================================
# INTEGRATION CONFIGURATION
# ================================
# Webhook Configuration
WEBHOOK_SECRET=webhook-secret-key-2024
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_RETRY_ATTEMPTS=3

# SSO Configuration
SSO_SAML_ENABLED=true
SSO_OIDC_ENABLED=true
SSO_LDAP_ENABLED=true

# ERP Integration
ERP_SAP_ENABLED=false
ERP_ORACLE_ENABLED=false
ERP_DYNAMICS_ENABLED=false

# ================================
# ANALYTICS CONFIGURATION
# ================================
# Machine Learning
ML_ENABLED=true
ML_MODEL_PATH=/app/models
ML_PREDICTION_BATCH_SIZE=100

# Business Intelligence
BI_REPORTS_ENABLED=true
BI_REAL_TIME_ANALYTICS=true

# ================================
# MOBILE APP CONFIGURATION
# ================================
MOBILE_APP_VERSION=1.0.0
MOBILE_FORCE_UPDATE=false
MOBILE_API_TIMEOUT=30000

# ================================
# FEATURE FLAGS
# ================================
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_ML_PREDICTIONS=true
FEATURE_MOBILE_OFFLINE_MODE=true
FEATURE_QR_CODE_SCANNING=true
FEATURE_RFID_SUPPORT=true
FEATURE_BULK_OPERATIONS=true
FEATURE_CUSTOM_FIELDS=true

# ================================
# DEVELOPMENT/DEBUG (Production: false)
# ================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER_UI=false
ENABLE_GRAPHQL_PLAYGROUND=false